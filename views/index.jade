doctype html
html.
  <head>
    <title>Demo Google Speech API</title>
    <style>
        body {
            font-family: Arial;
            width: 60%;
            margin: 0 auto;
        }
        .songs {
            margin-top: 50px;
            display: block;
            width: auto;
            height: 400px;
            overflow-y: scroll;
        }
        .inputMessage {
            display: block;
            width: 100%;
            height: 50px;
        }
        .loading {
            font-size: 11px;
            display: 'block';
        }
        .song {
            display: block;
            width: 100%;
            float: left;
            border-bottom: 1px solid #ddd;
            padding: 8px;
        }
        .song span {
            display: inline-block;
            width: 100%;
            float: left;
            padding: 4px;
            font-size: 12px;
        }
        .song .title {
            font-size: 18px;
            margin-top: 5px;
        }
        .song span a {
            text-decoration: none;
            color: green;
        }
    </style>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
        crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js"></script>
    <script src="/javascripts/record.js"></script>
  </head>
  <body>
      <div class="songs">
          <h1 class="loading">Loading...</h1>
      </div>
      <input type="text" placeholder="Enter to submit" class="inputMessage"/>

      <button class="record">Press and Hold to record</button>
  </body>
