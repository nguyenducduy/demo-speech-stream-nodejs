doctype html
html.
  <head>
    <title>Demo Google Speech API</title>
    <style>
        .view {
            display: block;
            width: 300px;
            height: 200px;
            overflow-y: scroll;
        }
        .inputMessage {
            display: block;
            width: 300px;
            height: 50px;
        }
        .loading {
            font-size: 11px;
            display: 'block';
        }
    </style>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
        crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js"></script>
    <script src="/javascripts/record.js"></script>
  </head>
  <body>
      <div class="view"></div>
      <input type="text" placeholder="Enter to submit" class="inputMessage"/>
      <span class="loading">Processing...</span><br/>

      <button class="start-recording">Start Recording</button>
      <button class="stop-recording">Stop Recording</button>
  </body>
